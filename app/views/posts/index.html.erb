<div class="jumbotron text-center">
  <h2>Tutte le news del sito</h2>
</div>

<div class="all-news">
  <div class="fluid-container">
    <% @posts.each_slice(3) do |posts| %>
      <div class="row">
        <% posts.each do |p| %>
          <div class="col-sm-4 text-center">
            <div class="thumbnail">
              <h2><%= link_to p.title, post_path(p) %></h2>
              <h3><%= p.subtitle %></h3>
              <hr />
              <p><%= truncate p.article, :length => 160 %></p>
              <h5>Creato il <%= p.created_at %></h5>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
